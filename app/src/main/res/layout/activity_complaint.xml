<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complaint"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Shield - Complaint Center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Grid with 3 rows x 2 columns -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Police -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/softBlue"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgPolice"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/police"
                    android:background="@drawable/circle_bg"
                    android:padding="12dp"
                    android:contentDescription="Police" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Police"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Law &amp;  Order"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hospital -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/softBlue"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgHospital"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/hospital"
                    android:background="@drawable/circle_bg"
                    android:padding="12dp"
                    android:contentDescription="Hospital" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Services"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fire -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/softBlue"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgFire"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/fire"
                    android:background="@drawable/circle_bg"
                    android:padding="12dp"
                    android:contentDescription="Fire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fire"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Services"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Water -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/softBlue"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgWater"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/water"
                    android:background="@drawable/circle_bg"
                    android:padding="12dp"
                    android:contentDescription="Water" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Supply"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bank -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/softBlue"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgBank"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bank"
                    android:background="@drawable/circle_bg"
                    android:padding="12dp"
                    android:contentDescription="Bank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Financial Help"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Child Care -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/softBlue"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgChildCare"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/child"
                    android:background="@drawable/circle_bg"
                    android:padding="12dp"
                    android:contentDescription="Child Care" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child Care"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welfare &amp;  Safety"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


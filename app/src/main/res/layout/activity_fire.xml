<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".Fire">

    <!-- Fire Logo -->
    <ImageView
        android:id="@+id/imgFire"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fire"
        android:contentDescription="Fire Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Screen Title -->
    <TextView
        android:id="@+id/tvFireTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire Complaint"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imgFire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Complaint Title + Voice Button -->
    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFireTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etFireComplaintTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Complaint Title"
            android:background="@drawable/bg_edittext"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/btnVoiceTitle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@android:color/transparent"
            android:contentDescription="Voice input for title" />
    </LinearLayout>

    <!-- Complaint Description + Voice Button -->
    <LinearLayout
        android:id="@+id/layoutDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etFireComplaintDescription"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:hint="Enter Complaint Description"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/bg_edittext"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/btnVoiceDesc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@android:color/transparent"
            android:contentDescription="Voice input for description" />
    </LinearLayout>

    <!-- Complaint Location + Voice Button -->
    <LinearLayout
        android:id="@+id/layoutLoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etFireComplaintLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Complaint Location"
            android:background="@drawable/bg_edittext"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/btnVoiceLoc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@android:color/transparent"
            android:contentDescription="Voice input for location" />
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnFireSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit Complaint"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutLoc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
